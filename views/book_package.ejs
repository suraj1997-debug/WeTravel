  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Sansita+Swashed:wght@700&display=swap" rel="stylesheet">
</head>

<body>



 <%- include('index-header.ejs') %>



  <!-- Navbar  -->

  <section id="nav-bar">
    <div class="logo">
      <h1>We<span>Travel</span></h1>
    </div>
    <div class="nav">
      <ul>
        <li><a href="/index" >Home</a></li>
        <li class="active"><a href="/tours" class="current">Tours</a></li>
        <li><a href="/hotels">Hotels</a></li>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/logout">logout</a></li>
        <% if(adminUser){ %>
        <li><a href="/dashboard">Dashboard</a></li>
        <% } %>
      </ul>
    </div>

  </section>

<!-- Page Header -->

<section id="page-header">
  <div class="heading">
    <h1><%= records.Package_Type %></h1>
    <h2><%= records.Package_name %></h2>
  </div>
</section>



<!-- Page Content -->

<section id="page-content">
    <div class="page-container">
      <div class="upper">
        <a href="/tours" class="btn btn-danger" style="padding: 0px 20px;"><span><i class="fas fa-angle-left"></i></span>&nbsp;Back</a>
      <div class="pricetop">
        <p>Starting from</p>
         <h3> <i class="fas fa-rupee-sign"></i> <%= records.Package_Price %> </h3>
      </div>
      <a href="/tours/booking/<%= records._id %>" name="book" class="btn btn-primary">Book now</a>
      <a href="#" name="query" class="btn btn-danger">Submit Query</a>
    </div>
      <h1><i class="fas fa-list-alt"></i>&nbsp;Package Summary</h1>
      <div class="summary">
        <div class="image">
          <img src="/uploads/<%= records.Package_image %>" alt="">
        </div>
        <div class="content">
        <h2>Package Name:</h2><p><%= records.Package_name %></p>
        <h2>Package Type:</h2><p><%= records.Package_Type %></p>
        <h2>Package Location:</h2><p><%= records.Package_location %></p>
        <h2>Trip Duration:</h1><p><%= records.Package_Duration %> days/<%= parseInt(records.Package_Duration)-1 %> nights</p>
        <h2>Package Features:</h2><p><%= records.Package_features %></p>
        <h2>Package Details:</h2><p><%= records.Package_Details %></p>
      </div>
    </div>
    <h1 style="margin-top: 4rem;"><i class="fas fa-location-arrow"></i> &nbsp;Places to be visited in this Trip</h1>
    <div class="places-container">
    <% if(record.length > 0 ){
       record.forEach((row)=>{
        if( row.Package_name == records.Package_name ){
      %>
      <div class="card">
        <div class="image">
          <img src="/uploads/<%= row.destination_image %>" alt="">
        </div>
        <div class="card-content">
          <h2><%= row.Package_location %></h2>
          <a href="/tours/places/<%= row._id %>" class="btn btn-primary">Info</a>
        </div>
      </div>
      <% } }) } %>
    </div>
    <h1 style="margin-top: 4rem;  margin-bottom: 4rem;"><i class="fas fa-map-marker-alt"></i> &nbsp;Location</h1>
   
   
    <div class="map">
      <iframe src="<%= records.Package_map %>" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div>
    
    </div>
</section>

