<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/view_package_category.css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

 
</head>

<body>


  <input type="checkbox" id="check">

  <!-- Navbar -->

  <%- include('header.ejs') %>

  <div class="nav-bar">
    <div class="nav-bar-item">
      <h1>Travel Category</h1>
      <ul style="display: flex; flex-direction: row;">
        <li><a href="/dashboard">home</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/PackageCategory">Package Category</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/PackageCategory/viewPackageCategory">View All Categories</a></li>
      </ul>
    </div>
  </div>

  <%- include('sidebar.ejs') %>
  
  <div class="travel-container">
     <a href="/categories/PackageCategory/addPackageCategory" class="nav-link">Add New Category</a>
     <div class="table-container" style=" margin: 0px 13px; margin-top: 2px;">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Package Type</th>
                <th scope="col" colspan="2">Action</th>
              </tr>
            </thead>
            <tbody class="table-light" style="color:#631919; font-weight: bold;">
                <% if(records.length > 0){
                   records.forEach((row)=>{
                %>
              <tr> 
                <td><%= row.Package_Type %></td>
                <td><a href="/categories/PackageCategory/viewPackageCategory/edit/<%= row._id %>"><i class="fas fa-edit" style="color: rgb(25 27 26); font-weight: bold;"></i></a></td>
                <td><a href="/categories/PackageCategory/viewPackageCategory/delete/<%= row._id %>"><i class="fas fa-trash-alt" style="color: rgb(150 11 11); font-weight: bold;"></i></a></td>
              </tr>
             <% })} %>
            </tbody>
          </table>
          
     </div>
   

  </div>



<script src="../public/javascripts/script.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>

</html>