<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/add_destination_category.css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

 
</head>

<body>


  <input type="checkbox" id="check">

  <!-- Navbar -->

  <%- include('header.ejs') %>

  <div class="nav-bar">
    <div class="nav-bar-item">
      <h1>Destination Category</h1>
      <ul style="display: flex; flex-direction: row;">
        <li><a href="/dashboard">home</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/destinations">Destination Category</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/destinations/addDestinationCategory">Add Category</a></li>
      </ul>
    </div>
  </div>

  <%- include('sidebar.ejs') %>
  
  <div class="travel-container">
    <% if(success != '') { %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <strong>Success:&nbsp;</strong> <%= success %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
     <a href="/categories/destinations/viewDestinationCategory" class="nav-link">View All Categories</a>
     
   <div class="form-container">
    <form action="/categories/destinations/addDestinationCategory" method="post" enctype="multipart/form-data" autocomplete="off">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Destination Name</label>
        <div class="col-sm-10 form-input">
          <input type="text" class="form-control" name="dest_name" placeholder="Enter Destination Name" required>
        </div>
      </div>
      <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Location</label>
        <div class="col-sm-10 form-input">
          <input type="text" class="form-control" name="loc" placeholder="Enter Location" required>
        </div>
      </div>
      <div class="form-group row ">
        <label for="description" class="col-sm-2 col-form-label">Destination Description</label>
        <div class="col-sm-10 form-input">
          <textarea class="form-control" style="resize: none;" name="dest_desc" rows="3" placeholder="Enter Destination Description" required></textarea>
        </div>
      </div>
      <div class="form-group row">
        <label for="img" class="col-sm-2 col-form-label">Destination Image</label>
        <div class="col-sm-10 form-input">
        <input type="file" style="padding: 4px 0px; font-size: 0.9rem;" class="form-control-file" name="dest_img">
      </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 button">
          <button type="submit" class="btn btn-primary">Add Category</button>
        </div>
      </div>
      
    </form>
   </div>
  </div>



<script src="../public/javascripts/script.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>

</html>