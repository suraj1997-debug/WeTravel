<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/update_destination_category.css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

 
</head>

<body>


  <input type="checkbox" id="check">

  <!-- Navbar -->

  <%- include('header.ejs') %>

  <div class="nav-bar">
    <div class="nav-bar-item">
      <h1>Destination Category</h1>
      <ul style="display: flex; flex-direction: row;">
        <li><a href="/dashboard">home</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/destinations">Destination Category</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/destinations/viewDestinationCategory">View All Categories</a></li>
        <li><a><i class="fas fa-arrow-right" style="font-size: 0.9rem; color: antiquewhite; padding: 0px 5px;"></i></a></li>
        <li><a href="/categories/destinations/viewDestinationCategory/edit/:id">Update Category</a></li>
      </ul>
    </div>
  </div>

  <%- include('sidebar.ejs') %>
  
  <div class="travel-container">
    <% if(success != '') { %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <strong>Success:&nbsp;</strong> <%= success %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
   <div class="form-container">
    <form action="/categories/destinations/viewDestinationCategory/edit/<%= record._id %>" method="post" enctype="multipart/form-data" autocomplete="off">
     
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Destination Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="dest_name" value="<%= record.destination_name %>">
        </div>
      </div>
      <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Location</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="loc" value="<%= record.location %>">
        </div>
      </div>
      <div class="form-group row ">
        <label for="description" class="col-sm-2 col-form-label">Destination Description</label>
        <div class="col-sm-10 form-input">
          <textarea class="form-control" style="resize: none;" name="dest_desc" rows="3"><%= record.destination_description %></textarea>
        </div>
      </div>
      <div class="form-group row" >
        <label for="img" class="col-sm-2 col-form-label">Destination Image</label>
        <div class="col-sm-10">
        <input type="file" style="padding: 4px 0px; font-size: 1.2rem;"  class="form-control-file" name="dest_img">
      </div>
      </div>
      <% if(record.destination_image){ %>
        <img src="/uploads/<%= record.destination_image %>" alt="<%= record.destination_image %>" style="width: 90px; margin-top: -3rem; margin-left: 31rem;">
      <% } %> 
      <div class="form-group row" style="margin-top: -2rem;">
        <div class="col-sm-10 button" style="display: flex;">
          <button type="submit" class="btn btn-primary">Update Category</button>
          <a href="/categories/destinations/viewDestinationCategory" class="nav-link">View All Categories</a>
        </div>
      </div>
    
    </form>
   </div>
  </div>



<script src="../public/javascripts/script.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>

</html>